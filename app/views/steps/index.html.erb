<h1>Listing steps</h1>

<table>
  <tr>
    <th>Parent</th>
    <th>Recipe</th>
    <th>Instruction</th>
    <th>Sortnum</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @steps.each do |step| %>
  <tr>
    <td><%= step.parent_id %></td>
    <td><%= step.recipe_id %></td>
    <td><%= step.instruction %></td>
    <td><%= step.sortnum %></td>
    <td><%= link_to 'Show', step %></td>
    <td><%= link_to 'Edit', edit_step_path(step) %></td>
    <td><%= link_to 'Destroy', step, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

