<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :timetocook %><br />
    <%= f.text_field :timetocook %>
  </div>
  <div class="field">
    <%= f.label :servings %><br />
    <%= f.text_field :servings %>
  </div>
  <div class="field">
    <%= f.label :votes_up %><br />
    <%= f.text_field :votes_up %>
  </div>
  <div class="field">
    <%= f.label :votes_down %><br />
    <%= f.text_field :votes_down %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

  <div class="field">
    <%= f.label :Recipe Name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :Description %><br />
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :Servings %><br />
    <%= f.text_field :servings %>
  </div>

  <div class="field">
    <%= f.label :Preparation Time %>
    <%= f.text_field :preparationtime %>
  </div>

  <div class="field">
    <%= f.label :Time to cook %>
    <%= f.text_field :timetocook %>
  </div>

  <div class="field">
    <%= f.label :Tags %>
    <%= f.text_field :tags %>
  </div> 
  
  <h2>Steps</h2>
  <% @recipes.steps do |step| %>
  <div class="field">
    <%= f.label :Steps %>
    <%= f.text_field :step %>
  </div>
  <% end %>

  <h2>Ingredients</h2>
  <% @recipes.ingredients do |ingredient| %>
  <div class="field">
    <%= f.label :Ingredients %>
    <%= f.text_field :ingredient %>
  </div>
  <% end %> 

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
