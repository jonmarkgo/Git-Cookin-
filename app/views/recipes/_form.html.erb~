<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :RecipeName %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :Description %><br />
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :Servings %><br />
    <%= f.text_field :servings %>
  </div>

  <div class="field">
    <%= f.label :Timetocook %> <br />
    <%= f.text_field :timetocook %>
  </div>

  
  <h2>Steps</h2> 
  <%= f.fields_for :steps do |builder| %> 
  <p>
    <%= builder.label :Description %> <br />
    <%= builder.text_area :description, :rows => 3 %>
  </p>
    <%= builder.fields_for :ingredients do |cp| %>
    <p>
      <%= cp.label :Ingredients %> <br />
      <%= cp.text_area :name, :row => 3 %> 
    </p>
    <% end %>

  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
